<!-- begin hero block -->
{% set custom_header = function('get_custom_header') %}
<div class="relative">
	{% if (post.hero_image is not empty) %}
		{% set post_image = Image(post.hero_image) %}
		<img style="height:{{ custom_header.height }}px" class="w-full max-h-[565px] object-cover object-center -z-1 brightness-50" src="{{ post_image.src }}" srcset="{{ post_image.srcset }}" sizes="{{ post_image.img_sizes }}" width="{{ post_image.width }}" height="{{ post_image.height }}" alt="{{ post_image.alt }}" />
	{% else %}
		{% set default_image = Image(site.theme.theme_mod('header_image_data').attachment_id) %}
		{% if (default_image.src is not empty) %}
			<img style="height:{{ custom_header.height }}px" class="w-full max-h-[565px] object-cover object-top -z-1 brightness-50" src="{{ default_image.src }}" srcset="{{ default_image.srcset }}" sizes="{{ post_default_imageimage.img_sizes }}" width="{{ default_image.width }}" height="{{ default_image.height }}" alt="{{ default_image.alt }}" />
		{% else %}
		{% set bg_color = site.theme.theme_mod('background_color') %}
			<div style="height:{{ custom_header.height }}px" class="w-full max-h-[565px] object-contain object-center -z-1 brightness-50" style="background-color:#{{bg_color}}"></div>
		{% endif %}
	{% endif %}
	<div class="absolute w-full h-full top-0">
		<div class="container mx-auto px-4 h-full flex items-center justify-center lg:justify-start">
			<h2 class="drop-shadow-lg text-[36px] md:text-[45px] lg:text-[55px] text-center font-extrabold text-yellow-primary break-words">
			{% if post.post_type == 'post'%}
				{{ post.hero_title ? post.hero_title : 'Resource' }}
			{% else %}
				{{ post.hero_title ? post.hero_title : post.title }}
			{% endif %}
			</h2>
		</div>
	</div>
</div>

<!-- end hero block -->