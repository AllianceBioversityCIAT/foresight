
{% macro cards_blog (posts, imageDefault) %}
{% for post in posts %}
	<div class="card card-allpost-blog mt-5 mb-3">
		<div class="row no-gutters">
			<div class="col-md-4 ">
				{% set image = TimberImage(post.thumbnail) %}
				<a href="{{ function( 'get_page_link', post.ID ) }}" class="card-permalink">
					<img src="{{ post.thumbnail.src|resize(380)|default(imageDefault) }}"
						 class="card-img imgBlogPosts" alt="{{ post.thumbnail.title|default('Cafeto Image Default') }}">
				</a>
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<a href="{{ function( 'get_page_link', post.ID ) }}" class="card-permalink">
						<h4 class="card-title">{{post.post_title}}</h4>
					</a>
					<p class="card-text text-muted">
						By
						{{ function('get_the_author_meta','display_name', post.post_author) }}
					</p>
					<hr class="blog-hr postblogHr mb-4 m-0">
					<p class="card-text">{{ post.preview.chars(150).read_more(false) }}</p>
					<a href="{{ function( 'get_page_link', post.ID ) }}" class="btn btn-outline-danger foresight-menu-button">Read More</a>
				</div>
			</div>
		</div>
	</div>
{% endfor %}

{% endmacro %}
