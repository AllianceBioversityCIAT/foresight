<section class="max-sm:mt-1">
  <div class="container mx-auto relative px-4">
    <div class="grid grid-cols-3 gap-4 px-4">
      <div class="col-span-2 max-sm:col-span-3">
        <h2 class="mt-36 mb-12 max-sm:mt-8">{{ post.meta( 'sub_title_partner' ) }}</h2>
      </div>
      <div class="col-span-1 max-sm:col-span-3">
      </div>
    </div>
    <div class="grid grid-cols-3 gap-x-4 gap-y-14 px-4 mb-32">

      {% for item in post.meta('logos_repeater') %}
        <div class="col-span-1 max-sm:col-span-3 text-center self-end">
            <img class="mx-auto" src="{{ Image( item.logo_partner ).src }}"
              srcset="{{ Image( item.logo_partner ).srcset }}"
              sizes="{{ Image( item.logo_partner ).img_sizes }}"
              alt="{{ Image( item.logo_partner ).title }}">
              <p class="font-bold text-base">{{item.title_partner}}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>