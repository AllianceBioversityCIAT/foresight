<section class="my-16">
  <div class="container relative divide-y">
    {% for post in frontPage.meta('home_panels_repeater') %}
      <div class="grid grid-cols-3 gap-4 px-4 first:pt-0 last:pb-0 pt-16 pb-11">
        <div class="col-span-1 max-sm:col-span-3 max-sm:flex max-sm:flex-col-reverse">
          <h4 class="text-3xl text-dark font-bold mb-11 max-sm:mt-8 max-sm:mb-4">
            {{ post.home_panel_card_title }}
          </h4>
          <img class="h-64 max-sm:max-h-64 max-sm:h-auto max-sm:max-w-xs max-sm:w-full max-sm:mx-auto" src="{{ Image( post.panel_card_image ).src }}"
            srcset="{{ Image( post.panel_card_image ).srcset }}"
            sizes="{{ Image( post.panel_card_image ).img_sizes }}"
            alt="{{ Image( post.panel_card_image ).title }}">
        </div>
        <div class="col-span-2 max-sm:col-span-3 flex flex-col gap-y-4 justify-between">
          <div class="text-base">
            {{ post.home_panel_card_text }}
            {% if post.active_read_more is not empty %}
            <details class="description [&_svg]:open:-rotate-180">
              <summary data-open="Read less" data-close="Read more" class="flex cursor-pointer list-none items-center justify-end gap-2">
                <div>
                  <svg class="rotate-0 transform text-black-100 transition-all duration-300" fill="none" height="20" width="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
                    <polyline points="6 9 12 15 18 9"></polyline>
                  </svg>
                </div>
              </summary>
              <p class="pt-2">
              {{ post.description_in_read_more }}
              </p>
            </details>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <a class="btn-white-large ml-6" href="#" style="display: none;"></a>
</section>
