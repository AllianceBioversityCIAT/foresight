<section class="my-16">
  <div class="container mx-auto relative px-4 divide-y">
    {% for post in frontPage.meta('home_panels_repeater') %}
      <div class="grid grid-cols-3 gap-4 px-4 first:pt-0 last:pb-0 pt-16 pb-11">
        <div class="col-span-1 max-sm:col-span-3 max-sm:flex max-sm:flex-col-reverse">
          <h4 class="text-3xl text-dark font-bold mb-11 max-sm:mt-8 max-sm:mb-4">
            {{ post.home_panel_card_title }}
          </h4>
          <img class="h-64 max-sm:max-h-64 max-sm:h-auto max-sm:max-w-xs max-sm:w-full max-sm:mx-auto" src="{{ Image( post.panel_card_image ).src }}"
            srcset="{{ Image( post.panel_card_image ).srcset }}"
            sizes="{{ Image( post.panel_card_image ).img_sizes }}"
            alt="{{ Image( post.panel_card_image ).title }}">
        </div>
        <div class="col-span-2 max-sm:col-span-3 flex flex-col gap-y-4 justify-between">
          <div class="text-base">
            {{ post.home_panel_card_text }}

            {% if post.active_read_more is not empty %}
              <div id="see-more-{{loop.index}}" class="subpage-exp-content mt-4" style="display: none;">
                {{ post.description_in_read_more }}
              </div>
            {% endif %}
          </div>

          {% if post.active_read_more is not empty %}
            <div class="flex flex-wrap items-center self-end">
              <button class="see-more-btn bg-transparent" data-id="see-more-{{loop.index}}">
                Read More 
              </button>
              <span>
                <svg class="ml-1" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M1.58925 0.744078C1.26381 0.418641 0.736171 0.418641 0.410734 0.744078C0.0852973 1.06951 0.0852973 1.59715 0.410734 1.92259L5.41073 6.92259C5.73617 7.24803 6.26381 7.24803 6.58925 6.92259L11.5892 1.92259C11.9147 1.59715 11.9147 1.06951 11.5892 0.744078C11.2638 0.418641 10.7362 0.418641 10.4107 0.744078L5.99999 5.15482L1.58925 0.744078Z" fill="#3F1364"/>
                </svg>
              </span>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
  <a class="btn-white-large ml-6" href="#" style="display: none;"></a>
</section>
