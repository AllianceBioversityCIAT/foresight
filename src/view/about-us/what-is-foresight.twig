    <div class="foo-head">
        <div class="container">
            <div class="circle">
                <div class="label">
                <a href="#anchor-link-id">
                    <span class="text-small">What is</span>
                    <h2 class="text-big">Foresight?</h2>
                 </a>   
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="35" height="35" viewBox="0 0 39.4 26.1"> <defs> <clipPath id="clip-path"> <rect width="39.4" height="26.1" fill="none"/> </clipPath> </defs> <g id="Arrow_Small_Down" data-name="Arrow Small Down" clip-path="url(#clip-path)"> <path id="Path_36" data-name="Path 36" d="M21.7,28.1,2,7.99,7.868,2,21.7,16.12,35.532,2,41.4,7.99Z" transform="translate(-2 -2)" fill="#c8c502"/> </g></svg>
            </div>
        </div>
    </div>
    <div class="foo">
        <div class="container">
        </div>
    </div>
    </div>
    <div id="anchor-link-id" class="this-is-foresight">
        <div class="content-about">
            <div class="container">
            <div class="row">
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="title">
                            <span class="dot"></span>
                            <span class="dot"></span>
                            <span class="dot"></span>
                        </div>
                        {{ content.meta('this_is_foresight') }}
                    </div>
                    <div class="col-12 col-md-6 col-lg-6">
                    <img class="featured-image lazyload" data-src="{{ Image(content.meta('featured_image')).src }}" data-srcset="{{ Image(content.meta('featured_image')).srcset }}" data-sizes="{{ Image(content.meta('featured_image')).img_sizes }}" alt="{{ Image(content.meta('featured_image')).title }}" width="720" height="600">
                    </div>
                </div>
            </div>
        </div>
        <div class="featured-content">
            <img class="lazyload" width="1920" height="335" data-src="{{ Image(content.meta('featured_bg_image_about')).src }}" data-srcset="{{ Image(content.meta('featured_bg_image_about')).srcset }}" data-sizes="{{ Image(content.meta('featured_bg_image_about')).img_sizes }}" alt="{{ Image(content.meta('featured_bg_image_about')).title }}">
            <div class="foo-bottom">
                <div class="container"></div>
            </div>
            <div class="label">
                <div class="container">
                    {{ content.meta('featured_content') }}
                </div>
            </div>
        </div>
    </div>
    <div class="offer-foresight">
        <div class="container">
        <div class="title">
            <span class="dot"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
             {{ content.meta('what_does_cg_foresight_offer') }}
        </div>
        <div class="container-bottom">
            <img class="lazyload bg-image" width="1920" height="840" data-src="{{ Image(content.meta('background_image_about_us')).src }}" data-srcset="{{ Image(content.meta('background_image_about_us')).srcset }}" data-sizes="{{ Image(content.meta('background_image_about_us')).img_sizes }}" alt="{{ Image(content.meta('background_image_about_us')).title }}">
            <div class="items-grid">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-lg-8">
                            <div class="row row-cols-2 row-cols-md-4">
                                {% for item in content.meta('offers') %}
                                <div class="col-3 col-md-2 logo">
                                <img class="lazyload" width="48" height="48" data-src="{{ Image(item.offer_icon).src }}" data-srcset="{{ Image(item.offer_icon).srcset }}" data-sizes="{{ Image(item.offer_icon).img_sizes }}" alt="{{ Image(item.offer_icon).title }}">
                                </div>
                                <div class="col-9 col-md-4 title">
                                    <span>{{ item.offer_label}}</span>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>