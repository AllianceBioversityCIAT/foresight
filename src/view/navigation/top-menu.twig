<div class="container-fluid m-0 p-0">
{% if platform == 'desktop' %}
    <nav id="foresight-top-menu" class="navbar navbar-expand-lg navbar-light">
{% else %}
    <nav id="foresight-top-menu" class="navbar fixed-top navbar-expand-lg navbar-light">
{% endif %}
    <a class="navbar-brand" href="{{site.url}}">
        <img src="{{theme.link}}/static/images/foresight-logo.svg" width="50" height="50" alt="{{site.name}}">
    </a>
    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarTogglerMenu" aria-controls="navbarTogglerMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
{% if platform == 'desktop' %}
        <div class="collapse navbar-collapse" id="navbarTogglerMenu">
          <ul class="navbar-nav ml-auto">
          {% for item in menu.items %}
            {% if item.children %}
                <li class="nav-item {{ item.classes|join(' ') }} dropdown">
                  <a class="nav-link dropdown-toggle" href="{{ item.link }}" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ item.title }}
                    <img src="{{theme.link}}/static/images/menu-bars.svg" width="24" height="24" alt="Menu">
                  </a>
                      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                          {% for child in item.children %}
                              <a class="dropdown-item" href="{{ child.link }}">{{ child.title }}</a>
                          {% endfor %}
                      </div>
                  </li>
            {% else %}
                <li class="nav-item {{ item.classes|join(' ') }}">
                  <a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
                </li>
            {% endif %}
            {% endfor %}
          <ul>
        </div>
{% else %}
    <div class="collapse navbar-collapse" id="navbarTogglerMenu">
          <ul class="navbar-nav ml-auto">
          {% for item in menu.items %}
              {% if item.link %}
              <li class="nav-item {{ item.classes|join(' ') }}">
                <a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
              </li>
              {% endif %}
              {% if item.children %}
                {% for child in item.children %}
                  <li class="nav-item {{ child.classes|join(' ') }}">
                    <a class="nav-link" href="{{ child.link }}">{{ child.title }}</a>
                  </li>
                {% endfor %}
              {% endif %}
            {% endfor %}
          <ul>
        </div>
{% endif %}
  </nav>
</div>