<section class="single-blog">
	<div class="container container-single-info">
		<img class="img single-image" width="550" height="450"
			 src="{{ post.thumbnail.src }}" srcset="{{ post.thumbnail.srcset }}"
			 sizes="{{ post.thumbnail.img_sizes }}" alt="{{ post.thumbnail.title }}"/>
		<span class="dot"></span>
		<span class="dot"></span>
		<span class="dot"></span>
		<h1 class="single-title">{{ post.title }}</h1>
		<div class="posted-by">
			<span class="date">
				Posted by
				<b>{{ post.author }}</b>
				on {{ post.date }}
			</span>
			<span class="date">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 20 18.35">
					<path id="ic_favorite_24px" transform="translate(-2 -3)" fill="#f07"
						d="M12,21.35l-1.45-1.32C5.4,15.36,2,12.28,2,8.5A5.447,5.447,0,0,1,7.5,3,5.988,5.988,0,0,1,12,5.09,5.988,5.988,0,0,1,16.5,3,5.447,5.447,0,0,1,22,8.5c0,3.78-3.4,6.86-8.55,11.54Z"/>
				</svg>
				1,556 Likes
			</span>
		</div>
		<div class="post-tag">
			{% for tag in post.terms( {query:{taxonomy:'post_tag', orderby:'name', order: 'ASC'}}) %}
				<span>
					<a href="{{ tag.link }}">
						{{ tag.name }}{{ ( loop.last ) ? '.': ',' }}
					</a>
				</span>
			{% endfor %}
		</div>
		<div class="post-content">
			{{ post.content }}
		</div>
		<hr class="post-hr">
	</div>
</section>
